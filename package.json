{
  "name": "@e22m4u/ts-openapi",
  "version": "0.0.5",
  "description": "The module produces OpenAPI Document described by TypeScript decorators.",
  "keywords": [
    "openapi",
    "swagger",
    "decorator"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e22m4u/ts-openapi.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc --build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"./src/**/*.ts\"",
    "test": "npm run lint && c8 --reporter=text-summary mocha",
    "test:coverage": "npm run lint && c8 --reporter=text mocha",
    "prepare": "husky"
  },
  "author": "e22m4u <e22m4u@yandex.ru>",
  "license": "MIT",
  "homepage": "https://github.com/e22m4u/ts-openapi",
  "peerDependencies": {
    "@e22m4u/ts-reflector": "0.0.x"
  },
  "devDependencies": {
    "@commitlint/cli": "~19.3.0",
    "@commitlint/config-conventional": "~19.2.2",
    "@types/chai": "~4.3.16",
    "@types/chai-subset": "~1.3.5",
    "@types/mocha": "~10.0.7",
    "@types/node": "~20.14.12",
    "c8": "~10.1.2",
    "chai": "~5.1.1",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "husky": "~9.1.2",
    "mocha": "~10.7.0",
    "prettier": "~3.3.3",
    "rimraf": "~6.0.1",
    "tsx": "~4.16.2",
    "typescript": "~5.5.4",
    "typescript-eslint": "~7.17.0"
  }
}
