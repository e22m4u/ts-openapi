{
  "name": "@e22m4u/ts-openapi",
  "version": "0.1.0",
  "description": "TypeScript decorators for generating The OpenAPI Document",
  "keywords": [
    "openapi",
    "swagger",
    "decorator",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e22m4u/ts-openapi.git"
  },
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.cjs",
  "exports": {
    "types": "./dist/esm/index.d.ts",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.cjs"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build:esm": "tsc --build",
    "build:cjs": "node build-cjs.js",
    "build": "rimraf dist && npm run build:esm && npm run build:cjs",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write \"./src/**/*.ts\"",
    "test": "npm run lint && c8 --reporter=text-summary mocha",
    "test:coverage": "npm run lint && c8 --reporter=text mocha",
    "prepare": "husky"
  },
  "author": "e22m4u <e22m4u@yandex.ru>",
  "license": "MIT",
  "homepage": "https://github.com/e22m4u/ts-openapi",
  "peerDependencies": {
    "@e22m4u/ts-reflector": "0.1.x"
  },
  "devDependencies": {
    "@commitlint/cli": "~19.5.0",
    "@commitlint/config-conventional": "~19.5.0",
    "@eslint/js": "~9.12.0",
    "@types/chai": "~5.0.0",
    "@types/chai-subset": "~1.3.5",
    "@types/mocha": "~10.0.9",
    "@types/node": "~22.7.5",
    "c8": "~10.1.2",
    "chai": "~5.1.1",
    "esbuild": "~0.24.0",
    "eslint": "~9.12.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-chai-expect": "~3.1.0",
    "eslint-plugin-mocha": "~10.5.0",
    "globals": "~15.10.0",
    "husky": "~9.1.6",
    "mocha": "~10.7.3",
    "prettier": "~3.3.3",
    "rimraf": "~6.0.1",
    "tsx": "~4.19.1",
    "typescript": "~5.5.4",
    "typescript-eslint": "~8.8.1"
  }
}
